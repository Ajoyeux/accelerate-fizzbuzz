{
    "name": "typescript_micro_service_name",
    "private": "true",
    "type": "module",
    "description": "description",
    "scripts": {
        "prestart": "npm run build",
        "build": "rm -rf dist && tsc -p tsconfig.build.json",
        "start": "node dist/src/index.js",
        "test": "vitest",
        "format": "prettier --write .",
        "lint": "eslint --ext .ts,.json,.js --ignore-path .gitignore .",
        "type-check": "tsc -p tsconfig.json --noEmit",
        "prepare": "husky"
    },
    "lint-staged": {
        "*.{js,ts,json}": [
            "npm run format",
            "npm run lint --fix"
        ]
    },
    "dependencies": {
        "@hapi/hapi": "^21.3.10",
        "@types/node": "^20.14.9",
        "clienteling-commons": "github:clienteling-connect/commons#latest",
        "dotenv": "^16.4.5",
        "husky": "^9.0.11",
        "typescript": "^5.5.2"
    },
    "devDependencies": {
        "@typescript-eslint/eslint-plugin": "^7.14.1",
        "@typescript-eslint/parser": "^7.14.1",
        "@vitest/coverage-v8": "^1.6.0",
        "eslint": "^8.57.0",
        "eslint-config-prettier": "^9.0.0",
        "eslint-plugin-prettier": "^5.0.1",
        "lint-staged": "^15.2.7",
        "prettier": "^3.3.2",
        "prettier-eslint": "^16.3.0",
        "vitest": "^1.2.2"
    },
    "engines": {
        "node": ">=20"
    }
}
