{
    "include": ["./src/**/*", "./tests/**/*"],
    "exclude": ["node_modules"],
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es2022",
        "module": "ESNext",
        "moduleResolution": "NodeNext",
        "rootDir": ".",
        "outDir": "./dist",
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "strict": true,
        "skipLibCheck": true
    }
}
